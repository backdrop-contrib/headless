/**
 * Page callback for paragraph types v2.
 */
function headless_paragraphs_item_v2($type, $entity_id) {
  $config = config_get('headless.settings', 'paragraphs');
  if ($config[$type] != 1) {
    $json_error = ['code' => 404];
    backdrop_json_output($json_error);
